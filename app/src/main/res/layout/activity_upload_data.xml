<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Hotel.UploadDataHotel"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/button">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Hotel Name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        android:inputType="text"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/edit_text_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/textborder"
        android:maxLength="35"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_title"
        app:layout_constraintBottom_toTopOf="@+id/largedescription"
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorWhite"
        android:background="@drawable/textborder"
        android:hint="Enter a quote "
        android:inputType="text"
        android:padding="5dp"/>
    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_description"
        app:layout_constraintBottom_toTopOf="@id/rating"
        android:id="@+id/largedescription"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/textborder"
        android:hint="Enter Description"
        android:padding="5dp"
        android:inputType="textMultiLine" />
    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/largedescription"
        app:layout_constraintBottom_toTopOf="@id/openingtime"
        android:id="@+id/rating"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Rating 1-5"
        android:background="@drawable/textborder"
        android:maxLength="1"
        android:inputType="numberDecimal"
        android:padding="5dp"/>

    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating"
        app:layout_constraintBottom_toTopOf="@+id/closingtime"
        android:id="@+id/openingtime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Opening Time AM/PM"
        android:textColor="@color/colorWhite"
        android:background="@drawable/textborder"
        android:maxLength="4"
        android:inputType="text"
        android:padding="5dp"/>

    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/openingtime"
        app:layout_constraintBottom_toTopOf="@+id/pricerange1"
        android:id="@+id/closingtime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Closing Time AM/PM"
        android:padding="5dp"
        android:maxLength="4"
        android:background="@drawable/textborder"
        android:textColor="@color/colorWhite"
        android:inputType="text" />
    <EditText
        android:background="@drawable/textborder"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        android:id="@+id/pricerange1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closingtime"
        app:layout_constraintBottom_toTopOf="@id/pricerange"
        android:layout_width="match_parent"
        android:hint="Min Service Price in RS"
        android:textColor="@color/colorWhite"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:layout_height="50dp"/>

    <EditText
        android:background="@drawable/textborder"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@drawable/selector"
        android:id="@+id/pricerange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricerange1"
        app:layout_constraintBottom_toTopOf="@id/button"
        android:layout_width="match_parent"
        android:hint="Max Service Price in RS"
        android:textColor="@color/colorWhite"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:layout_height="50dp"/>


    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pricerange"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveNote"
        android:text="Save" />


</androidx.constraintlayout.widget.ConstraintLayout>